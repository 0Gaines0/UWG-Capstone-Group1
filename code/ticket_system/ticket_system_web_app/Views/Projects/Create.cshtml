@model ticket_system_web_app.Models.Project

@{
    ViewData["Title"] = "Create";

    if (ActiveEmployee.Employee == null)
    {
        Context.Response.StatusCode = 404;
        return;
    }
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="/css/MainPages.css">
        <link rel="stylesheet" href="/css/Projects/Projects.css">
        <link rel="stylesheet" href="/css/Projects/Create.css">
        <script src="~/js/Projects/Create.js"></script>
    </head>
    <body>
        <h1>New Project</h1>
        <hr />
        <div class="container">
            <div class="content-block">
                <form asp-action="Create" class="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="PTitle" class="form-control" placeholder="Enter project title..." />
                        <span asp-validation-for="PTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="PDescription" class="form-control" placeholder="Enter project description..."> </textarea>
                        <span asp-validation-for="PDescription" class="text-danger"></span>
                    </div>
                    <div class="gridpane">
                        <div class="scrollable">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Add collaborators</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="groupsTableBody">
                                
                            </tbody>
                        </table>
                        </div>
                        <div class="scrollable">
                            <table>
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Current collaborators</th>
                                    </tr>
                                </thead>
                            <tbody id="collaboratorsTableBody"></tbody>
                            </table>
                        </div>
                        <input type="button" value="Add" class="btn" onclick="alert('Add');" />
                        <input type="button" value="Remove" class="btn" onclick="alert('Remove');" />
                    </div>
                    <div class="form-group">
                        <select id="projectLeadSelect" class="form-control">
                            <option value="">Select a Project Lead</option>
                        </select>
                    </div>
                    <p>(temporary project lead ID selector)</p>
                    <div class="form-group">
                        <input asp-for="ProjectLeadId" class="form-control" placeholder=""/>
                        <span asp-validation-for="ProjectLeadId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <input type="button" value="Cancel" class="btn" onclick="location.href='@Url.Action("Index")';"/>
                    </div>
                </form>
            </div>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
        <div class="nav_container">
            <div class="nav_top">
                <img src="~/assets/navigation_bar_img.png" alt="Navigation Image" class="nav_image">
            </div>
            <ul class="nav_list">
            <a asp-action="Index" asp-controller="LandingPage" class="nav_item"><li>Home</li></a>
            <a asp-action="Index" asp-controller="Groups" class="nav_item"><li>Groups</li></a>
                <li class="nav_item">Users</li>
            </ul>
        </div>
            
    </body>
</html>

@page
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(145deg, #608272, #010C06);
            color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-container {
            display: flex;
            width: 1000px; 
            height: 600px; 
            background-color: #0f1e13;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3), 0px 6px 6px rgba(0, 0, 0, 0.2);
            align-items: center;
            justify-content: space-between; 
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }


        
        .login-left {
            flex: 1;
            padding: 50px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center; 
            text-align: left; 
        }

            .login-left img {
                display: block;
                max-width: 120px;
                margin-bottom: 10px; 
            }

            .login-left h1 {
                font-size: 2rem;
                margin-bottom: 20px; 
                position: relative;
                padding-bottom: 5px;
                border-bottom: 2px solid #ffffff; 
            }

            .login-left p {
                margin-top: 0;
                margin-bottom: 20px;
                font-size: 1rem;
                color: #ffffff;
            }

        .form-group {
            width: 100%; 
            margin-bottom: 20px; 
            display: flex;
            flex-direction: column; 
            align-items: flex-start; 
        }

            .form-group label {
                font-size: 1rem;
                margin-bottom: 5px; 
                color: #ffffff;
            }

            .form-group input {
                width: 100%; 
                padding: 10px;
                border-radius: 5px;
                border: 2px solid #ffffff; 
                background-color: #2e2e2e; 
                color: #ffffff; 
            }

        .login-left button {
            width: 75%; 
            padding: 10px;
            margin-top: 10px; 
            background-color: #9f7aea;
            color: #ffffff;
            border: 1px solid #ffffff; 
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-left: 35px
        }

            .login-left button:hover {
                background-color: #b794f4; 
            }

        .login-right {
            flex: 1;
            background-color: #0f1e13;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .login-right img {
                max-width: 95%;
                border-radius: 20px 20px 20px 20px;
                margin-left: -115px;

            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <img src="~/assets/ticket_system_logo.png" alt="Logo"> 
            <h1>Welcome back!</h1> 
            <p>Please enter your credentials</p>
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input type="text" id="Username" name="Username" placeholder="Enter your username">
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" name="Password" placeholder="Enter your password">
                </div>
                <button type="submit">Log In</button>
            </form>
        </div>
        <div class="login-right">
            <img src="~/assets/login_image.png" alt="Ill">
        </div>
    </div>
</body>
</html>
